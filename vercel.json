{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python@2.10.0",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12",
        "includeFiles": [
          "webapp/**/*",
          "*.py",
          "requirements.txt"
        ]
      }
    },
    {
      "src": "webapp/static/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/webapp/static/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "FLASK_APP": "webapp",
    "FLASK_ENV": "production",
    "PYTHONPATH": "/var/task:/var/task/webapp"
  },
  "buildCommand": "pip install -r requirements.txt",
  "outputDirectory": "."
}
